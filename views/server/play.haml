%script{ :type => "text/x-handlebars", :id => "location" }
  <div>
  <h1>{{model.name}}</h1>
  <p>{{model.description}}</p>
  {{#each item in model.items}}
  <div {{bind-attr id=item.div_id}}>
  <p class="description">{{item.name}} : {{item.description}}</p>
  <p class="describe-actions"></p>
  <ul>
  {{#each action in item.actions}}
  <li {{bind-attr id=action.li_id owner_element=item.div_id}}>
  <a class="do" {{bind-attr id=action.a_id href=action.a_href}}>{{action.name}} : {{action.description}}</a>
  </li>
  {{/each}}
  </ul>
  </div>
  {{/each}}
  {{#each way in model.ways}}
  <p>{{way.name}} : {{way.description}}</p>
  {{/each}}
  </div>

